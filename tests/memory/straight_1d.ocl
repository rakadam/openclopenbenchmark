
//OpenCL
//MAX_GLOBAL_SIZE(0):(1024*1024*2)
//MAX_GLOBAL_SIZE(1):1
//MAX_GLOBAL_SIZE(2):1
//MAX_LOCAL_SIZE(0):0
//MAX_LOCAL_SIZE(1):1
//MAX_LOCAL_SIZE(2):1

kernel void straight_1d(global int* buffer1, global int*buffer2, int buffer_size)
{
	buffer2[get_global_id(0)] = buffer1[get_global_id(0)];
}

//Gold

void straight_1d(void* buffer1, void* buffer2, int buffer_size)
{
	for (int i = 0; i <  buffer_size; i++)
	{
	    ((int*)buffer2)[i] = ((int*)buffer1)[i];
	}
}
