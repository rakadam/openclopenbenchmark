
//OpenCL
//MAX_GLOBAL_SIZE(0):(1024*1024*2)
//MAX_GLOBAL_SIZE(1):1
//MAX_GLOBAL_SIZE(2):1
//MAX_LOCAL_SIZE(0):0
//MAX_LOCAL_SIZE(1):1
//MAX_LOCAL_SIZE(2):1
//MIN_LOCAL_SIZE:32

#pragma OPENCL EXTENSION cl_khr_global_int32_base_atomics: enable

kernel void atom_add_conv(global int* buffer1, global int*buffer2, int buffer_size)
{
	int val = buffer1[get_global_id(0)];
	
	atom_add(&buffer2[0], val);
}

//Gold

void atom_add_conv(void* buffer1, void* buffer2, int buffer_size)
{
	for (int i = 0; i <  buffer_size; i++)
	{
	    ((int*)buffer2)[0] += ((int*)buffer1)[i];
	}
}
